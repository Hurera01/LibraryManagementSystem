  "components": {
    "schemas": {
      "BookDto": {
        "required": [
          "author_id",
          "genre",
          "isbn",
          "publish_year",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "author_id": {
            "type": "integer",
            "format": "int32"
          },
          "genre": {
            "minLength": 1,
            "type": "string"
          },
          "publish_year": {
            "type": "integer",
            "format": "int32"
          },
          "isbn": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CategoryDto": {
        "required": [
          "category_name"
        ],
        "type": "object",
        "properties": {
          "category_name": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreateAuthorDto": {
        "required": [
          "dob",
          "first_name",
          "last_name",
          "nationality"
        ],
        "type": "object",
        "properties": {
          "first_name": {
            "minLength": 1,
            "type": "string"
          },
          "last_name": {
            "minLength": 1,
            "type": "string"
          },
          "dob": {
            "type": "string",
            "format": "date-time"
          },
          "nationality": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoanDto": {
        "required": [
          "book_id",
          "due_date",
          "loan_date",
          "member_id",
          "return_date"
        ],
        "type": "object",
        "properties": {
          "book_id": {
            "type": "integer",
            "format": "int32"
          },
          "member_id": {
            "type": "integer",
            "format": "int32"
          },
          "loan_date": {
            "type": "string",
            "format": "date"
          },
          "due_date": {
            "type": "string",
            "format": "date"
          },
          "return_date": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      },
      "MemberDto": {
        "required": [
          "email",
          "first_name",
          "last_name",
          "membership_date",
          "phone_number"
        ],
        "type": "object",
        "properties": {
          "first_name": {
            "minLength": 1,
            "type": "string"
          },
          "last_name": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "phone_number": {
            "minLength": 1,
            "type": "string"
          },
          "membership_date": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      },
      "Role": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "UserLoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserRegistrationDto": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 100,
            "minLength": 6,
            "type": "string"
          },
          "firstName": {
            "minLength": 1,
            "type": "string"
          },
          "lastName": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
